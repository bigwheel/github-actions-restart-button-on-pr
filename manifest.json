{
  "manifest_version": 3,
  "name": "GitHub Restart Button on PR",
  "description": "Add GitHub Actions restart button on PR page",
  "homepage_url": "https://github.com/bigwheel/github-restart-button-on-pr",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": ["scripts/inject.js"],
      "matches": ["https://github.com/*/*/pull/*"]
    }
  ]
}
